<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sport"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_sport_null1"
            android:layout_width="650dp"
            android:layout_height="96dp"
            android:alpha="0"
            android:text="Button" />

        <Button
            android:id="@+id/btn_sport_back"
            android:layout_width="150dp"
            android:layout_height="96dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_sport_null1"
            android:text="Button" 
            android:alpha="0"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_sport_musdinic"
        android:layout_width="650dp"
        android:layout_height="96dp"
        android:alpha="0"
        android:text="Button" />
    <Button
        android:id="@+id/btn_sport_null3"
        android:layout_width="650dp"
        android:layout_height="96dp"
        android:alpha="0"
        android:text="Button" />
    <Button
        android:id="@+id/btn_sport_tendinic"
        android:layout_width="650dp"
        android:layout_height="96dp"
        android:alpha="0"
        android:text="Button" />

    <Button
        android:id="@+id/btn_sport_null2"
        android:layout_width="650dp"
        android:layout_height="96dp"
        android:alpha="0"
        android:text="Button" />


</LinearLayout>
