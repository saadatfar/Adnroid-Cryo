<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stop"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_time_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:textColor="#fff"
        android:text="45&apos;"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:layout_above="@+id/txt_temp1_stop"
        android:layout_alignLeft="@+id/txt_temp1_stop"
        android:layout_marginBottom="76dp"
        android:alpha="0"
        android:text="Button" />

    <TextView
        android:id="@+id/txt_temp1_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_time_stop"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="96dp"
        android:text="-20\u00b0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/txt_temp3_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_time_stop"
        android:layout_alignRight="@+id/btn_stop"
        android:layout_marginRight="142dp"
        android:text="-20\u00b0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/txt_press_stop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_press_stop2"
        android:layout_alignTop="@+id/btn_stop"
        android:layout_marginTop="108dp"
        android:text="75%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/txt_press_stop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_stop"
        android:layout_alignLeft="@+id/txt_time_stop"
        android:layout_marginBottom="25dp"
        android:text="75%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

</RelativeLayout>
