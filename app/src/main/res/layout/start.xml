<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_back_start"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:text="Button" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="87dp"
        android:layout_toLeftOf="@+id/btn_back_start"
        android:alpha="0"
        android:text="Button" />

    <TextView
        android:id="@+id/txt_pressure_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_start"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="40dp"
        android:text="75%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/txt_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/txt_pressure_start"
        android:text="12&apos;"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/txt_temp_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn_start"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="16dp"
        android:text="-20\u00b0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="24dp" />

</RelativeLayout>
