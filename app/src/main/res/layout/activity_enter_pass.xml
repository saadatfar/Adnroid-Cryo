<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="main.activity.EnterPassActivity"
    android:background="@drawable/enterapassword">

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button1"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="195dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignBottom="@+id/button1" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button0"
        android:layout_alignTop="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0"
        android:id="@+id/btn_clear"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0"
        android:id="@+id/btn_next_pass"
        android:layout_alignTop="@+id/btn_clear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0"
        android:id="@+id/btn_back_pass"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_pass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*************"
        android:id="@+id/txt_pass"
        android:textSize="30dp"
        android:layout_marginBottom="71dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#ac0019"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />
</RelativeLayout>
