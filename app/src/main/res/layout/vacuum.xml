<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vacuumsetting"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_vacuum_next"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Button"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_vacuum_back"
        android:layout_alignStart="@+id/btn_vacuum_back" />

    <Button
        android:id="@+id/btn_decVacuum"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Button"
        android:alpha="0"
        android:layout_below="@+id/btn_vacuum_back"
        android:layout_alignLeft="@+id/txt_vacuum"
        android:layout_alignStart="@+id/txt_vacuum"
        android:layout_marginLeft="-10dp" />

    <Button
        android:id="@+id/btn_vacuum_back"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:text="Button" />

    <com.Tirax.RF.TextFont
        android:id="@+id/txt_vacuum"
        android:layout_width="150px"
        android:layout_height="40px"
        android:layout_marginBottom="-7dp"
        android:text="frequency"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ab0018"
        android:textSize="21dp"
        android:layout_above="@+id/btn_decVacuum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="246dp"
        android:layout_marginStart="246dp"
        android:width="400dp"
        android:layout_toLeftOf="@+id/btn_vacuum_back"
        android:layout_toStartOf="@+id/btn_vacuum_back" />

    <Button
        android:id="@+id/btn_addVacuum"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:alpha="0"
        android:text="Button"
        android:layout_alignBaseline="@+id/btn_vacuum_back"
        android:layout_alignBottom="@+id/btn_vacuum_back"
        android:layout_alignLeft="@+id/txt_vacuum"
        android:layout_alignStart="@+id/txt_vacuum"
        android:layout_marginLeft="-10dp" />



</RelativeLayout>